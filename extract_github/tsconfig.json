{
  "compilerOptions": {
    "target": "ES6",                   // Specify the ECMAScript target version
    "module": "CommonJS",              // Specify the module system (CommonJS, ES6, etc.)
    "outDir": "./dist",                // Specify the output directory for compiled files
    "rootDir": "./src",                // Specify the root directory of your TypeScript source files
    "strict": true,                    // Enable strict type checking
    "esModuleInterop": true,           // Enable esModuleInterop for better compatibility with ES modules
    "skipLibCheck": true,              // Skip type checking of declaration files (*.d.ts)
  }
}
